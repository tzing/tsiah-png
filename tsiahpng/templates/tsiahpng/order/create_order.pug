-extends 'tsiahpng/layouts/base.pug'
-load i18n
-load static
-load sass_tags

block extra_head
  link(rel='stylesheet', type='text/css', href="{% static 'tsiahpng/css/calendar.min.css' %}")
  link(href="{% sass_src 'tsiahpng/css/order.scss' %}", rel='stylesheet', type='text/css')

block content
  //- breadcrumb
  include tsiahpng/order/includes/breadcrumb.pug

  //- messages
  include tsiahpng/includes/messages.pug

  //- form
  .ui.rimless.vertical.segment
    form.ui.form(method='POST')
      -csrf_token
      include tsiahpng/order/includes/form_create_order.pug

block extra_scripts
  script(type='text/javascript', src="{% static 'tsiahpng/js/lib/calendar.min.js' %}")
  script(type='text/javascript', src="{% static 'tsiahpng/js/order/create_order.js' %}")
